<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head></head>
  <title><%= [@page_title, Shoppe.settings.store_name].join('-') %></title>
  <meta content="width=device-width, initial-scale=1" name="viewport"/>
  <%= stylesheet_link_tag    "mobile/application", media: "all", "data-turbolinks-track" => true %>
  <%#= javascript_include_tag "mobile/application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "mobile/mobile" %>
  <%= csrf_meta_tags %>
  <body>
	  
    <div data-role="page" id="page" data-url="<%= request.path %>">
  	  <div data-role="header" data-theme="b" class="ui-header ui-bar-b">
  	  	<a href="#nav-panel" data-icon="bars"></a>
  	  	<h1><%= Shoppe.settings.store_name %></h1>
  		<a href="#" data-icon="shop" class="ui-btn-right"></a>
  			<span class="ui-title" />
  	  </div>
      <br>
	  
        <%= yield %>
      </br>

	  <%= render 'layouts/panel' %>


	  
	  <div data-role="footer" data-theme="b"><!-- footer -->
	          <div data-role="navbar" data-iconpos="right"><!-- navbar -->
	              <ul>
	                  <li><a href="#" data-icon="home">Hem</a></li>
	                  <li><a href="#" data-icon="mail">Kontakt</a></li>
	                  <li><a href="#" data-icon="shop">Varukorg</a></li>
	              </ul>
	          </div><!-- /navbar -->
	      </div><!-- /footer -->
    </div>
	
	<script>
	$( document ).on( "pagecreate", "#page", function() {
	    $( document ).on( "swipeleft swiperight", "#page", function( e ) {
	        // We check if there is no open panel on the page because otherwise
	        // a swipe to close the left panel would also open the right panel (and v.v.).
	        // We do this by checking the data that the framework stores on the page element (panel: open).
	        if ( $( ".ui-page-active" ).jqmData( "panel" ) !== "open" ) {
	            if ( e.type === "swipeleft" ) {
	                $( "#nav-panel" ).panel( "open" );
	            } else if ( e.type === "swiperight" ) {
	                $( "#nav-panel" ).panel( "open" );
	            }
	        }
	    });
	});
	</script>
  </body>
</html>